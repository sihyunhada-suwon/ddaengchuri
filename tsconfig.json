{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": [
      "ES2016",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "react",
      "react-native",
      "node",
      "expo"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "env.d.ts",
    "src",
    "declarations.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
